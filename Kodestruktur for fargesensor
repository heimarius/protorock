#include <Wire.h>
#include "Adafruit_TCS34725.h"
Adafruit_TCS34725 tcs = Adafruit_TCS34725(TCS34725_INTEGRATIONTIME_700MS, TCS34725_GAIN_1X);

const int lesteVerdier[] = {0,0,0};

int antallFarger = 4;
String Farger[] = {"Rød", "Grønn", "Blå", "Orange"};
int fargeRegister[4][3] = {{2000,100,100}, {100,2000,100}, {100,100,2000}, {1000,200,1000}};
int feilmargin = 500;


bool samme = false;

void setup() {
    Serial.begin(9600);
  
  if (tcs.begin()) {
    Serial.println("Found sensor");
  } else {
    Serial.println("No TCS34725 found ... check your connections");
    while (1);
 }

  uint16_t r, g, b, c, colorTemp, lux;
}

void loop(void) {
  uint16_t r, g, b, c, colorTemp, lux; //leser verdier
   tcs.getRawData(&r, &g, &b, &c);

int lr = r;
int lg = g;
int lb = b; //lagere de lese verdiene i variabler i listen lesteVerdier

int lesteVerdier[] = {lr,lg,lb};


for (int i =0; i< antallFarger ; i++){
 if (samme == true){
  Serial.print(Farger[i]);
  break;
 }
  for (int j =0; j<3; j++){
   

    if (lesteVerdier[j] > ( fargeRegister[i][j] - feilmargin) and lesteVerdier[j] < (fargeRegister[i][j] +feilmargin)){
      samme = true;
      }
    
     if (samme == true) {
     

     }
  }
}
}
